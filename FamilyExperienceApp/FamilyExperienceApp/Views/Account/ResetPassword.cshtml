@model ResetPasswordVM

<!-- 


Main section start -->
<div id="fx-page-outer">
    <main id="fx-page-content">

        <div class="container">
            <div class="fx-login-content">
                <div class="login-content-wrapper">
                    <span class="login-label">Change Password</span>
                    <form id="reset-password-part" method="Post" aria-labelledby="ui-id-3">
                        <div class="login-fields">
                            <label style="margin-bottom: 1rem;">
                                Please enter your new password and confirm password.
                            </label>
                            <input  type="password" class="user-login" asp-for="Password"
                                   placeholder="New password">
                            <input style="margin: 0;" asp-for="ConfirmPassword" type="password" class="user-login" name="ConfirmPassword"
                                   placeholder="Confirm password">
                            <input type="hidden" asp-for="Email" value=@TempData["Email"] />
                            <input type="hidden" asp-for="Token" value=@TempData["Token"]/>
                        </div>
                        <div class="login-action">
                            <div class="col-lg-12">
                                <button type="submit" class="login-action-button">
                                    <span class="login-btn-text">Change Password</span>
                                </button>
                            </div>
                            <div class="col-lg-12" style="margin-top: 29px;">
                                <a class="login-links-register" asp-action="login" asp-controller="account" target="_self">
                                    <span class="login">Login</span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>
</div>
<!-- Main section end -->
